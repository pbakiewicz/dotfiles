setopt prompt_subst # variable substiution in promtp


# Ustawianie po prawej strony czasu wykonania komendy.
# Thanks to: https://gist.github.com/knadh/123bca5cfdae8645db750bfb49cb44b0
function preexec() {
  timer=$(($(date +%s%0N)/1000000))
}

function precmd() {
  if [ $timer ]; then
    now=$(($(date +%s%0N)/1000000))
    elapsed=$(($now-$timer))

    export RPROMPT="%F{cyan}${elapsed}ms %{$reset_color%}"
    unset timer
  fi
}

# Find and set branch name var if in git repository.
function git_branch_name()
{
  unstaged_files=$(git status --porcelain 2> /dev/null | wc -l)
  if [[ ${unstaged_files} -eq 0 ]];
  then
      emoticon="ðŸ‘»"
  else
      emoticon="ðŸ¤“"
  fi

  # Tutaj przykÅ‚ad mojego przekombinowania. Trzeba byÅ‚o najpierw po prostu sprawdziÄ‡,
  # czy jesteÅ›my w repo, a dopiero pÃ³Åºniej braÄ‡ git.
  # branch=$(git branch 2> /dev/null | grep '\*' | awk '{print $NF}' | head -n1)
  if $(git rev-parse --is-inside-work-tree >/dev/null 2>&1); then
      branch=$(git rev-parse --abbrev-ref HEAD)
    echo " ${emoticon} %B${branch}%b "
     :
  else
      :
  fi
}

# Ciekawe, Å¼e wartosÄ‡ PROMPTa jest zwracana tylko raz, ale funkcjoa git_branch_name
# jest ewaulowana przy kaÅ¼dym cd.
PROMPT='%F{208}%~%f$(git_branch_name) ' 
